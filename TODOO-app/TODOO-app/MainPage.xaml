<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TODOO_app.MainPage"
             BackgroundColor="#28282B">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20">


           
    


            <Image Source="todo1.png"
               WidthRequest="100"
               HeightRequest="100"
               HorizontalOptions="Center"
               Margin="0,0,0,30" />
           
    
            <Frame Padding="0"
                   BorderColor="Transparent"
                   HasShadow="False"
                   CornerRadius="6"
                   BackgroundColor="Transparent"
                   Margin="0,5">
                
                <Entry x:Name="AddListItem"
                       Placeholder="Enter a new task"
                       BackgroundColor="Transparent"
                       TextColor="White"
                       FontSize="14"
                PlaceholderColor="#888"/>


            </Frame>


            <Frame Padding="0"
                BorderColor="Transparent"
                HasShadow="False"
                CornerRadius="6"
                BackgroundColor="Transparent"
                Margin="0,5">

                <Entry
    x:Name="AddDescription"
    Placeholder="Provide descriptions"
    BackgroundColor="Transparent"
    TextColor="White"
    FontSize="12"
    PlaceholderColor="#888"
    HeightRequest="30" />


            </Frame>
            
            <Button Text="➕ Lägg till" 
                    BackgroundColor="White"
                    TextColor="Black"
                    CornerRadius="20"
                    FontSize="18"
                    Clicked="OnAddClicked">
                <Button.Shadow>
                    <Shadow Brush="Black" Opacity="0.6" Radius="10" Offset="5,5" />
                </Button.Shadow>
                
                
            </Button>

            <CollectionView ItemsSource="{Binding Items}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="Transparent"  Margin="10" Padding="10">
                            <VerticalStackLayout>
                                <Label Text="{Binding Title}" 
                           FontSize="18" 
                           FontAttributes="Bold" />
                                <Label Text="{Binding Description}" 
                           FontSize="14" 
                           TextColor="Gray" />

                                <Button Text="✗"
                                BackgroundColor="#FF5252"
                                TextColor="White"
                                FontSize="14" 
                                HorizontalOptions="EndAndExpand"
                                BindingContext="{Binding .}"
                                   Clicked="DeleteOnClick" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>



        </VerticalStackLayout>
    </ScrollView>
</ContentPage>


